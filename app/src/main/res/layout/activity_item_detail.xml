<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.lostandfoundnew.ClickViewpager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="4dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/sliderdots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/viewpager"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toolbaritemdetail"
        android:layout_below="@+id/sliderdots">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:textSize="20sp"
                        android:textStyle="normal|bold|italic"
                        android:id="@+id/txtdetailtittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="iphone 5s"
                        android:textAllCaps="true"/>
                    <TextView android:textSize="15sp"
                        android:id="@+id/txtdetailaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="161-j1 block valancia town lahore"
                        android:layout_below="@+id/txtdetailtittle"/>
                    <TextView android:textSize="20sp"
                        android:ellipsize="end"
                        android:id="@+id/txtdetailcategories"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:text="(phone)"
                        android:maxLines="1"
                        android:layout_toRightOf="@+id/txtdetailtittle"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/txtadby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="Posted by:"
                        android:layout_below="@+id/txtdetailaddress"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:id="@+id/detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_toRightOf="@+id/txtadby"
                        android:layout_below="@+id/txtdetailaddress"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/toolbaritemdetail"
                    android:layout_below="@+id/viewpager">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Detail:"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/txtdetaildescription"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <fragment
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/detailmap"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/toolbaritemdetail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:id="@+id/btncall"
            android:background="@drawable/btnmap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <ImageButton
                android:layout_gravity="left|center_vertical|center_horizontal|center"
                android:background="@drawable/ic_call_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="call"
                android:textAllCaps="true"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/btnsms"
            android:background="@drawable/btnmap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <ImageButton
                android:layout_gravity="left|center_vertical|center_horizontal|center"
                android:background="@drawable/ic_message_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sms"
                android:textAllCaps="true"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/btnmessage"
            android:background="@drawable/btnmap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <ImageButton
                android:layout_gravity="left|center_vertical|center_horizontal|center"
                android:background="@drawable/ic_message_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chat"
                android:textAllCaps="true"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
